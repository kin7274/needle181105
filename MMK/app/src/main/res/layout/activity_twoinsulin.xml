<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--탭바 타이틀 : 인슐린 설정 페이지-->
            <android.support.v7.widget.Toolbar
                android:id="@+id/my_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorPrimary"
                android:elevation="4dp">

                <TextView
                    android:id="@+id/bar_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:fontFamily="@font/my_font_family"
                    android:text="인슐린 2개를 설정해주세요"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:textStyle="normal" />
            </android.support.v7.widget.Toolbar>

            <RelativeLayout
                android:layout_marginTop="?attr/actionBarSize"
                android:id="@+id/aaa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="품목을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null11"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="품목"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card11"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="하위품명을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null12"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="하위품명"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card12"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="단위을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null13"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="단위"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card13"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="투약 시간을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text14"
                            android:layout_margin="8dp"
                            android:weightSum="4">

                            <CheckBox
                                android:id="@+id/checkbox11"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="아침전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox12"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="점심전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox13"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="저녁전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox14"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="취침전"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


            <View
                android:id="@+id/bbb"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_height="3dp"
                android:layout_below="@+id/aaa"
                android:layout_margin="4dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/bbb"
                android:layout_margin="4dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="품목을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text21"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null21"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="품목"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/card22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card21"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="하위품명을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text22"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null22"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="하위품명"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card22"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/null23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="단위을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <TextView
                            android:id="@+id/text23"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/null23"
                            android:layout_margin="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:hint="단위"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:id="@+id/card24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card23"
                    android:layout_margin="4dp"
                    android:elevation="4dp"
                    android:padding="4dp"
                    app:cardCornerRadius="4dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/text24"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/my_font_family"
                            android:gravity="center_vertical|center_horizontal"
                            android:text="투약 시간을 선택해주세요"
                            android:textColor="@color/black"
                            android:textSize="30sp" />

                        <LinearLayout
                            android:id="@+id/ccc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text24"
                            android:layout_margin="8dp"
                            android:weightSum="4">

                            <CheckBox
                                android:id="@+id/checkbox21"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="아침전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox22"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="점심전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox23"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="저녁전"
                                android:textSize="20sp" />

                            <CheckBox
                                android:id="@+id/checkbox24"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:fontFamily="@font/my_font_family"
                                android:gravity="center_vertical|center_horizontal"
                                android:text="취침전"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <Button
                            android:background="@drawable/round_button"
                            android:layout_below="@+id/ccc"
                            android:id="@+id/set_btn"
                            style="?attr/borderlessButtonStyle"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="100dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/my_font_family"
                            android:text="저장하기"
                            android:textColor="@color/blue"
                            android:textSize="30sp" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>